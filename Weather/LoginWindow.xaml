<Window x:Class="Weather.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather"
        mc:Ignorable="d"
        Title="Login" Height="520" Icon="C:\IT\NetworkProgramming\Weather\Weather\Images\login.png" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="White" CornerRadius="10" Width="350" Height="450" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBlock Text="Welcome Back!" FontSize="24" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center"/>
                <TextBlock Text="Please sign in to continue" FontSize="14" Foreground="#666" HorizontalAlignment="Center" Margin="0,5,0,20"/>

                <TextBlock Text="Email" FontSize="16" Foreground="#444"/>
                <TextBox x:Name="EmailTextBox" Height="40" VerticalAlignment="Bottom" Padding="10,5" FontSize="16"                     
                 HorizontalAlignment="Stretch" BorderBrush="#999" BorderThickness="2" />

                <TextBlock Text="Password" FontSize="16" Foreground="#444" />
                <PasswordBox x:Name="PasswordBox" Height="40" Padding="10,5" FontSize="16"                     
HorizontalAlignment="Stretch" VerticalAlignment="Bottom" BorderBrush="#999" BorderThickness="2"/>

                <Button Content="Login" Click="LoginButton_Click" Height="45" Background="#0078D4" Foreground="White" FontSize="16" FontWeight="Bold"  Margin="0,20,0,0"/>

                <TextBlock Text="Don't have an account?" FontSize="12" Foreground="#666" HorizontalAlignment="Center" Margin="10"/>
                <Button Content="Register" Click="RegisterButton_Click" Height="40" Background="Transparent" Foreground="#0078D4" FontSize="18" BorderThickness="0"/>

                <TextBlock x:Name="ErrorMessage" Foreground="Red" FontSize="15" Visibility="Collapsed" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
