<Window x:Class="Weather.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather"
        mc:Ignorable="d"
        Title="Registration" Height="460" Width="400" 
        Icon="C:\IT\NetworkProgramming\Weather\Weather\Images\registration.jpg"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Border Background="White" CornerRadius="10" Width="350" Height="450" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <Button Width="40" Height="30" Margin="0,20,250,0" Grid.Column="1" x:Name="ReturnBT" Click="ReturnBT_Click" >
                    <Button.Content>
                        <Image Source="C:\IT\NetworkProgramming\Weather\Weather\Images\Return.png" />
                    </Button.Content>
                </Button>
                <TextBlock Text="Sign Up" FontSize="24" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="Please sign up to continue" FontSize="14" Foreground="#666" HorizontalAlignment="Center" Margin="0,-20,0,0"/>
                
                <TextBlock Text="User Name" Foreground="#444" FontSize="16"  HorizontalAlignment="Left"/>
                <TextBox x:Name="UserNameTextBox" 
                     Height="40" 
                     BorderBrush="#999" BorderThickness="2" 
                     Padding="10,5" FontSize="16"                     
                     HorizontalAlignment="Stretch"
                     />
                
                <TextBlock Text="Email" Foreground="#444" FontSize="16"  HorizontalAlignment="Left"/>
                <TextBox x:Name="EmailTextBox" 
                     Height="40" 
                     BorderBrush="#999" BorderThickness="2" 
                     Padding="10,5" FontSize="16"                  
                     HorizontalAlignment="Stretch"
                     />


                <TextBlock Text="Password" Foreground="#444" FontSize="16"  HorizontalAlignment="Left"/>
                <PasswordBox x:Name="PasswordBox" 
                         Height="40" 
                         BorderBrush="#999" BorderThickness="2" 
                         Padding="10,5" FontSize="16" 
                         HorizontalAlignment="Stretch"/>


                <Button Content="Registration" 
                    Height="45" 
                    Background="#4A90E2" Foreground="White" 
                    FontSize="16" FontWeight="Bold" 
                    BorderBrush="#4A90E2" BorderThickness="2"
                    HorizontalAlignment="Stretch" 
                    Margin="0,50" Click="RegisterButton_Click"/>

          
            </StackPanel>
        </Border>
    </Grid>
  
</Window>
